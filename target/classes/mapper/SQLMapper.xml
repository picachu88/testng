<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 命名空间mapper,如果有多个mapper文件，这个必须唯一 -->
<mapper namespace="com.boray.model">

    <!--获取登陆接口case-->
    <select id="loginCase" parameterType="String"  resultType="com.boray.model.User">

        select * from user where userName=#{userName};
    </select>
    
    <!--添加用户接口case-->
    <select id="addUserCase" parameterType="Integer" resultType="com.boray.model.AddUserCase">
        select * from AddUserCase where id=#{id};
    </select>

    <!--获取用户列表case-->
    <select id="getUserListCase"  resultType="com.boray.model.User">
        <!-- SQL语句 -->
        select * from user;
    </select>

    <!--更新/删除用户信息case-->
    <select id="updateUserInfoCase" parameterType="Integer" resultType="com.boray.model.UpdateUserInfoCase">
        select * from UpdateUserInfoCase where id = #{id};
    </select>


    <!--添加用户接口-->
    <select id="addUser" parameterType="com.boray.model.AddUserCase" resultType="com.boray.model.User">
        select * from user where
        userName=#{userName}
        and password=#{password}
        and roles=#{roles}
        and tenantName=#{tenantName}
        and isDelete=#{isDelete};

    </select>

    <!--获取用户信息-->
    <select id="getUserInfo" parameterType="com.boray.model.GetUserInfoCase" resultType="com.boray.model.User">
        <!-- SQL语句 -->
        select * from user where
        id=#{userId};
    </select>

    <!--获取用户列表-->
    <select id="getUserList" parameterType="com.boray.model.GetUserListCase" resultType="com.boray.model.User">
        <!-- SQL语句 -->
        select * from user
        <trim prefix="WHERE" prefixOverrides="and">
            <if test="null != userName and '' !=userName">
                AND userName=#{userName}
            </if>

        </trim>
        ;
    </select>

    <!--获取更新后的数据-->
    <select id="getUpdateUserInfo" parameterType="com.boray.model.UpdateUserInfoCase" resultType="com.boray.model.User">
        select * from user
        <trim prefix="WHERE" prefixOverrides="and">
            <if test="null != userName and '' !=userName">
                AND userName=#{userName}
            </if>
            <if test="null != isDelete and '' !=isDelete">
                AND isDelete=#{isDelete}
            </if>
        </trim>
       And id = #{userId};
    </select>


</mapper>